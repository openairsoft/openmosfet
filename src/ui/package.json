{
  "name": "UI",
  "version": "1.0.0",
  "description": "Web UI for OpenMosfet",
  "main": "./dev/api/server.js",
  "scripts": {
    "build": "(mkdir build || echo '') && html-inline src/index.html | html-minifier > build/out.html && node compress.js",
    "build:dev": "(mkdir build || echo '') && html-inline src/index.html > build/out.html && node compress.js",
    "start": "node ./dev/api/server.js",
    "watch": "nodemon ./dev/api/server.js --ignore src --ext \"*\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@gfx/zopfli": "^1.0.15",
    "connect-livereload": "^0.6.1",
    "html-inline": "^1.2.0",
    "html-minifier": "^4.0.0",
    "livereload": "^0.9.3"
  },
  "devDependencies": {
    "colors": "1.4.0",
    "eslint": "7.20.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.22.1",
    "express": "4.18.2",
    "nodemon": "^2.0.20"
  }
}
